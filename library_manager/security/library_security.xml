<odoo>
    <record id="library_rule_librarian" model="ir.rule">
        <field name="name">Librarian Full Access</field>
        <field name="groups" eval="[(4, ref('library_group_customer'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
        <field name="domain_force">[('customer_id','=',user.id)]</field>
        <field name="model_id" ref="model_library_rental"/>
    </record>

