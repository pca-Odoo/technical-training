<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="rental_view_list" model="ir.ui.view">
            <field name="name">library.rental.list</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <tree string="Rentals">
                    <field name="customer_id"/>
                    <field name="returned"/>
                    <field name="rent_date"/>
                    <field name="book_id"/>
                </tree>
            </field>
        </record>
        
        <record id="rental_view_form" model="ir.ui.view">
            <field name="name">library.rental.form</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <form string="Rentals">
                    <sheet>
                        <h1>Library Rental</h1>
                        <group>
                            <group>
                                <field name="customer_id"/>
                                <field name="rent_date"/>
                                <field name="rent_period" attrs="{'invisible': [('rent_return','=',False)]}"/>
                                <field name="rent_return"/>
                            </group>
                            <group>
                                <field name="book_id"/>
                                <field name="book_isbn"/>
                                <field name="book_authors"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="rental_view_map" model="ir.ui.view">
            <field name="name">library.rental.map</field>
            <field name="model">library.rental</field>
            <field name="arch" type="xml">
                <map res_partner="customer_id" default_order="rent_date" hide_name="true">
                    <field name="customer_id" string="Renter Name"/>
                    <field name="book_id" string="Book"/>
                </map>
            </field>
        </record>
    </data>
</odoo>