<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="book_list_action" model="ir.actions.act_window">
            <field name="name">Boosk</field>
            <field name="res_model">library.book</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a book</p>
            </field>
        </record>
        
        <menuitem name="Library Management"
                  id="menu_library"
                  sequence="1"/>
        <menuitem name="Library Manager"
                  parent="menu_library"
                  id="menu_library_sub"
                  sequence="2"/>
        <menuitem name="Books"
                  parent="menu_library_sub"
                  id="menu_books"
                  sequence="3"
                  action="book_list_action"/>
    </data>
</odoo>