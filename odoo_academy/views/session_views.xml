<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="session_view_form" model="ir.ui.view">
            <field name="name">academy.session.form</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <form string="Session">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="course_id"/>
                                <field name="instructor_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="duration"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="session_view_list" model="ir.ui.view">
            <field name="name">academy.session.list</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <tree string="Sessions">
                    <field name="name"/>
                    <field name="instructor_id"/>
                </tree>
            </field>
        </record>
        
        <record id="session_view_calendar" model="ir.ui.view">
            <field name="name">academy.session.calendar</field>
            <field name="model">academy.session</field>
            <field name="arch" type="xml">
                <calendar string="Session Calendar"
                          date_start="start_date"
                          date_stop="end_date"
                          date_delay="duration"
                          color="instructor_id"
                          event_open_popup="true"
                          mode="month">
                    <field name="name"/>
                    <field name="instructor_id"/>
                </calendar>
            </field>
        </record>
    </data>
</odoo>